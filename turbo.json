{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "pipeline": {
    "build": {
      "dependsOn": [],
      "outputs": [
        "dist/**"
      ]
    },
    "bump-version": {
      "dependsOn": [
        "build"
      ],
      "outputs": [
        "package.json"
      ]
    },
    "format": {},
    "lint": {},
    "prerelease": {
      "dependsOn": [],
      "outputs": [
        ".npmignore"
      ]
    },
    "release": {
      "dependsOn": [
        "prerelease",
        "bump-version"
      ],
      "outputs": []
    },
    "test": {
      "dependsOn": [
        "build"
      ],
      "outputs": [
        "coverage/**"
      ]
    }
  }
}