{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": [],
      "outputs": ["dist/**"]
    },
    "bump-version": {
      "dependsOn": ["^build", "build"],
      "outputs": ["package.json"]
    },
    "format": { "cache": false },
    "lint": {},
    "release": {
      "dependsOn": ["bump-version"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"]
    }
  },
  "globalEnv": ["DISABLE_FUNCTION_TRACING", "npm_package_version"]
}
