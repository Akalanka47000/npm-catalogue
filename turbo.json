{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "bump-version":{
      "dependsOn": ["^bump-version"],
      "outputs": ["package.json"]
    },
    "lint": {
      "outputs": []
    },
    "release": {
      "dependsOn": ["^release"],
      "outputs": ["dist/**"]
    }
  }
}
